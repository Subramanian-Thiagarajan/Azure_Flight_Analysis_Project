															"directory": {
																"value": "@concat(split(item().fileName_sink,'.')[0],'_Date',formatDateTime(utcnow(),'yyyy-MM-dd'))",
																"type": "Expression"
															}
														}
													}
												]
											}
										]
									}
								}
							]
						}
					}
				],
