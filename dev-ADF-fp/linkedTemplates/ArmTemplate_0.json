													{
														"referenceName": "ZipFileSink",
														"type": "DatasetReference",
														"parameters": {
															"container": {
																"value": "@item().container_sink",
																"type": "Expression"
															},
															"directory": {
																"value": "@concat(item().directory_sink,'/','Date',formatDateTime(utcnow(),'yyyy-MM-dd'))",
																"type": "Expression"
															},
															"fileName": {
																"value": "@item().fileName_sink",
																"type": "Expression"
															}
														}
													}
												]
											}
										],
										"ifTrueActivities": [
											{
												"name": "CSV - ADLS Source to Sink",
